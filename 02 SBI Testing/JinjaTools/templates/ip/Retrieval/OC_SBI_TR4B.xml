<edit-config>
    <target>
      <{{target}}/>
    </target>
    <config>
      <routing-policy xmlns="http://openconfig.net/yang/routing-policy">
        <policy-definitions>
          <policy-definition>
		    <name>{{policy_name}}</name>
            <config>
              <name>{{policy_name}}</name>
            </config>
            <statements>
              <statement>
                <config>
                  <name>{{policy_statement}}</name>
                </config>
                <conditions>
                  <config>
                    <install-protocol-eq xmlns:oc-pol-types="http://openconfig.net/yang/policy-types">oc-pol-types:{{install_protocol}}</install-protocol-eq>
                  </config>
                  <bgp-conditions xmlns="http://openconfig.net/yang/bgp-policy">
                    <match-ext-community-set>
                      <config>
                        <ext-community-set>{{community_set_name}}</ext-community-set>
                        <match-set-options>{{route_target}}</match-set-options>
                      </config>
                    </match-ext-community-set>
                  </bgp-conditions>
                </conditions>
                <actions>
                  <config>
                    <policy-result>{{policy_result}}</policy-result>
                  </config>
                </actions>
              </statement>
            </statements>
          </policy-definition>
        </policy-definitions>
      </routing-policy>
    </config>
</edit-config>